<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center" android:id="@+id/record_3_l1">

    <Button
            android:text="녹음 시작"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/record_3_b1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
    <Button
            android:text="녹음 중지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/record_3_b2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/record_3_l2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/record_3_l3">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
                    android:id="@+id/record_3_imgb1"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_pause"
                    android:id="@+id/record_3_imgb2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>