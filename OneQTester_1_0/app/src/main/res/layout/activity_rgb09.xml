<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/rgb_9_l1">

    <TextView
            android:text="테스트 결과가 정상이었나요?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rgb_9_t1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"
            android:textSize="30sp" android:layout_marginTop="150dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/rgb_9_l2">
        <Button
                android:text="YES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rgb_9_b1"
                android:layout_gravity="bottom" android:layout_marginLeft="100dp"
                android:layout_marginBottom="100dp" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
        <Button
                android:text="NO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rgb_9_b2"
                android:layout_gravity="bottom" android:layout_marginRight="100dp"
                android:layout_marginBottom="100dp" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>