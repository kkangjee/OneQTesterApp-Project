<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/touch_2_l1">

    <TextView
            android:text="터치 테스트는 화면에\n그림을 그릴 수 있습니다.\n 전체적으로 드로잉 하시면서\n터치가 되지 않는 부분을 찾아보세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/touch_2_t1"
            android:gravity="center_horizontal" android:layout_marginTop="100dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="START"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/touch_2_b1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_weight="0"
                android:layout_marginLeft="150dp" android:layout_marginRight="150dp"
                android:layout_marginBottom="100dp" android:textSize="24sp" android:layout_marginTop="10dp"/>/>
    </LinearLayout>
    <TextView
            android:text="테스트를 마치고 뒤로가기를 터치하여\n이 화면으로 돌아온 후\n다음 테스트로 이동하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/touch_2_t2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"
            android:gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="NEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/touch_2_b2"
                android:layout_marginLeft="155dp" android:layout_marginRight="155dp"
                android:layout_marginBottom="100dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>